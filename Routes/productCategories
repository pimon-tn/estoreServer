const express = require('express');
const { Pool } = require('pg');
const productCategories = express.Router();

const pool = new Pool({
    user: 'postgres',
    host: 'localhost',
    database: 'postgres',
    password: '123456789',
    port: 5432,
});

productCategories.get('/categories', async (req, res) => {
    let categoryData;
    pool.query("SELECT * FROM estore.categories", (error, data)=>{
        if(error){
            categoryData = error;
            res.status(500).send(categoryData);
        }else{
            categoryData = data.rows;
            res.status(200).send(categoryData);
        }
    })
});

productCategories.get('/products', async (req, res) => {
    let productData;
    pool.query("SELECT * FROM estore.products", (error, data)=>{
        if(error){
            productData = error;
            res.status(500).send(productData);
        }else{
            productData = data.rows;
            res.status(200).send(productData);
        }
    })
});


module.exports = productCategories;